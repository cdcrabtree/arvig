citHeader("To cite rightwingviolence in publications use:")

citEntry(entry = "Article",
  title        = "Refugees Welcome? Introducing a Georeferenced Event Dataset on Right-Wing Violence in Germany, 2014-2015",
  author       = personList(as.person("Julia Strasheim"),
                   as.person("David Benček")),
  journal      = "Journal of",
  year         = "2015",
  volume       = "x",
  number       = "y",
  pages        = "xx-zz",
  url          = "http://www.journal.com",

  textVersion  =
  paste("Julia Strasheim, David Benček (2015).",
        "Refugees Welcome? Introducing a Georeferenced Event Dataset on Right-Wing Violence in Germany, 2014-2015",
        "Journal of, vol(number), pages",
        "URL url.")
)
